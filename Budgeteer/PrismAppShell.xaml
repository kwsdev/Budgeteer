<Controls:MetroWindow x:Class="Budgeteer.PrismAppShell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:regions="clr-namespace:Common.Regions;assembly=Budgeteer.Common"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        d:DesignHeight="200" d:DesignWidth="800"
        Title="Budgeteer" Height="800" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static regions:RegionNames.MenuRegion}" />
        <TabControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static regions:RegionNames.TabRegion}" TabStripPlacement="Left" />
    </Grid>
</Controls:MetroWindow>