<UserControl x:Class="Budgeteer.Modules.History.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:history="clr-namespace:Budgeteer.Modules.History"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="900">
    <UserControl.DataContext>
        <history:HistoryViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Command="{Binding ImportCommand}" Content="Import csv" Width="80" HorizontalAlignment="Left" />
        <DataGrid ItemsSource="{Binding History.Entries}" Grid.Row="1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Date}" Header="Date" Width="120" />
                <DataGridTextColumn Binding="{Binding Direction}" Header="Withdrawal/Deposit" Width="125" />
                <DataGridTextColumn Binding="{Binding Amount.Value}" Header="Amount" Width="100" />
                <DataGridTextColumn Binding="{Binding Description}" Header="Description" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>